                            <option value="4">42</option>
                            <option value="4">43</option>
                            <option value="4">44</option>
                            <option value="4">45</option>
                        </select>
                    </form>
                    <!-- Color -->
                    <div class="color">
                        <p>Color:</p>
                        <div class="color-1"></div>
                        <div class="color-2"></div>
                    </div>
                    <!-- Cantidad -->
                    <form class="cantidad" action="#">
                        <p>Cantidad:</p>
                        <label for="cantidad"></label>
                        <input id="cantidad" value="1" min="1" max="20" name="cantidad" type="number">
                    </form>
                    <!-- Botones -->
                    <div class="carrito">
                        <a href="/products/cart">Comprar</a>
                        <a href="">Agregar al carrito<i class="fa-solid fa-cart-shopping"></i></a>
                    </div>
                </div>
                <!-- Descripcion -->
                <div class="descripcion-detalles">
                    <div class="card-descripcion-detalles">
                        <h4>descripcion</h4>
                        <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Voluptate neque repellat aliquam
                            consequuntur veniam fuga in maxime sequi unde ratione!</p>
                    </div>
                </div>
            </aside>
        </div>
        <!-- Prodcutos similares -->
        <article class="productos-similares">
            <h4>Productos similares</h4>
            <img src="/img/zapa-otro-1.jpg" class="more-img" alt="otros productos">
            <img src="/img/zapa-otro-2.jpg" class="more-img" alt="otros productos">
            <img src="/img/zapa-otro-3.jpg" class="more-img" alt="otros productos">
            <img src="/img/zapa-otro-4.jpg" class="more-img" alt="otros productos">
        </article>
    </main>
    <%- include('partials/footer') %>
