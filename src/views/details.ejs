<!DOCTYPE html>
<html lang="en">

<%- include('partials/head',{
    title : 'Footwear-Fusion | Details',
    
  }) %>

<body>

    <%- include('partials/header') %>

    <main class="main-detalles">
        <!-- Recorrido -->
        <nav>
            <div class="recorrido">
                <a href="/">Home</a>
                <p>></p>
                <p>Detalles</p>
            </div>
        </nav>
        <!-- Titulo -->
        <h2 class="nombre-zapatilla">nombre zapatilla</h2>
        <!-- Imagenes -->
        <div class="main-section-imagenes">
            <div class="imagenes-detalles">
                <div class="img-principal">
                    <img src="/img/zapa-1.jpg" class="main-img" alt="imagen">
                </div>
                <div class="img-otros">
                    <img src="/img/zapa-2.jpg" class="views-img" alt="imagen2">
                    <img src="/img/zapa-3.jpg" class="views-img" alt="imagen3">
                    <img src="/img/zapa-4.jpg" class="views-img" alt="imagen4">
                </div>
            </div>
            <!-- Especificaciones -->
            <aside class="especificaciones">
                <div class="card-especificaciones">
                    <!-- precio -->
                    <p class="precio">Precio: $39.900</p>
                    <!-- Talle -->
                    <form class="talle" action="#">
