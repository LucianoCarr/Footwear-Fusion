<!DOCTYPE html>
<html lang="en">
<%- include('partials/head',{ title : 'Footwear-Fusion | Login' , }) %>
    <%- include('partials/bootstrap') %>

        <body>
            <%- include('partials/header') %>
                <main>
                    <div class="container">
                        <div class="row ">
                            <div class="col-12 col-md-10 col-lg-8 mx-auto mt-5">
                                <div class="card mb-3 shadow-lg">
                                    <div class="card-header">
                                        <h4>PERFIL DE USUARIO</h4>
                                    </div>
                                    <div class="card-body">
                                        <form action="/users/profile?_method=PUT" method="POST" class="row">
                                            <div class="col-12 col-md-6 mb-3">
                                                <label for="name" class="form-label">Nombre</label>
                                                <input type="text" class="form-control" id="name" placeholder="ej: Juan"
                                                    name="name" value="<%= name %>">
                                                    <span class="ms-2 fw-bold"  style="color: #e27396;"><%= locals.errors?.name?.msg %></span>
                                            </div>
                                            <div class="col-12 col-md-6 mb-3">
                                                <label for="lastName" class="form-label">Apellido</label>
                                                <input type="text" class="form-control" id="lastName"
                                                    placeholder="ej: Rodriguez" name="lastName" value="<%= lastName %>">
                                                    <span class="ms-2 fw-bold"  style="color: #e27396;"><%= locals.errors?.lastName?.msg %></span>
                                            </div>
                                            <div class="col-12 col-md-6 mb-3">
                                                <label for="birthday" class="form-label">Fecha de nacimiento</label>
                                                <input type="date" class="form-control" id="birthday" name="birthday" 
                                                value="<%= birthday %>">
                                            </div>
                                            <div class="col-12 col-md-6 mb-3">
                                                <label for="address" class="form-label">Direcci√≥n</label>
                                                <input type="text" class="form-control" id="address"
                                                    placeholder="Domicilio" name="address" value="<%= address %>">
                                            </div>
                                            <div class="col-12 col-md-6 mb-3">
                                                <label for="province" class="form-label">Provincia</label>
                                                <select type="text" class="form-select" id="province" name="province">
                                                    <option hidden value="">Seleccione...</option>
                                                    <% provinces.forEach( prov => { %>
                                                        <option <%= province === prov.name ? 'selected' : '' %> value="<%= prov.name %>"><%= prov.name %></option>
                                                    <% }) %>
                                                </select>
                                            </div>
                                            <div class="col-12 col-md-6 mb-3">
                                                <label for="city" class="form-label">Ciudad</label>
                                                <select type="text" class="form-select" id="city" name="city">
                                                    <option hidden value="">Seleccione...</option>
                                                    <% cities.forEach( cit => { %>
                                                        <option <%= city === cit.name ? 'selected' : '' %> value="<%= cit.name %>"><%= cit.name %></option>
                                                    <% }) %>
                                                </select>
                                            </div>

                                            <div class="d-flex justify-content-end">
                                                <button type="submit" class="btn btn-dark">Guardar cambios</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
                <%- include('partials/footer') %>
        </body>

</html>