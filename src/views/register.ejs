<!DOCTYPE html>
<html lang="en">

<%- include('partials/head',{
    title : 'Footwear-Fusion | Register',
    
  }) %>
  <%- include('partials/bootstrap') %>

<body>
    <%- include('partials/header') %>
    <main class="main-register">

        <div class="card-register">
            <div class="login_conteiner-img">
                <img src="/img/logo-transform(whrite).png" alt="">
            </div>
            <h3>REGISTRO</h3>
            <form action="" method="POST" class="formulario">
                <div class="register-nameAndLastname">
                    <div class="casillas-registro name">
                        <label for="name">Nombre</label>
                        <input class="formulario-casillas-register <%= locals.errors && (errors.name && 'is-invalid') %>" id="name" name="name" type="text" value="<%= locals.old && (old.name && old.name) %>">
                        <spam class="ms-2 fw-bold"  style="color: rgba(94, 84, 142, 1);"><%= locals.errors && (errors.name && errors.name.msg) %></spam>
                    </div>
                    <div class="casillas-registro lastname">
                        <label for="lastname">Apellido</label>
                        <input class="formulario-casillas-register <%= locals.errors && (errors.lastname && 'is-invalid') %>" id="lastname" name="lastname" type="text" value="<%= locals.old && (old.lastname && old.lastname) %>">
                        <spam class="ms-2 fw-bold"  style="color: rgba(94, 84, 142, 1);"><%= locals.errors && (errors.lastname && errors.lastname.msg) %></spam>
                    </div>
                </div>
                <div class="casillas-registro">
                    <label for="email">Email</label>
                    <input class="formulario-casillas-register <%= locals.errors && (errors.email && 'is-invalid') %>" id="email" type="email" name="email" value="<%= locals.old && (old.email && old.email) %>">
                    <spam class="ms-2 fw-bold"  style="color: rgba(94, 84, 142, 1);"><%= locals.errors && (errors.email && errors.email.msg) %></spam>
                </div>
                <div class="conteiner-passwords">
                    <div class="casillas-registro1 register-password">
                        <label for="password">Contraseña</label>
                        <input class="formulario-casillas-register <%= locals.errors && (errors.password && 'is-invalid') %>" id="password" type="password" name="password">
                        <spam class="ms-2 fw-bold"  style="color: rgba(94, 84, 142, 1);"><%= locals.errors && (errors.password && errors.password.msg) %></spam>
                        <i class="fa-solid fa-eye"></i>
                    </div>
                    <div class="casillas-registro1 register-password1">
                        <label for="password2">Confirmar Contraseña</label>
                        <input class="formulario-casillas-register <%= locals.errors && (errors.password2 && 'is-invalid') %>" id="password2" type="password" name="password2">
                        <spam class="ms-2 fw-bold"  style="color: rgba(94, 84, 142, 1);"><%= locals.errors && (errors.password2 && errors.password2.msg) %></spam>
                        <i class="fa-solid fa-eye"></i>
                    </div>
                </div>
                <div class="conteiner-buttons">
                    <div class="formulario-boton">
                        <button class="boton1" type="submit">Crear Cuenta</button>
                    </div>
                    <div class="formulario-boton">
                        <button class="boton-2" type="reset"><a href="/">Cancelar</a></button>
                    </div>
                </div>
            </form>
        </div>
    </main>
    <%- include('partials/footer') %>
</body>

</html>